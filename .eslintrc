{
  "parserOptions": {
    "sourceType": "module",
    "ecmaFeatures": {
        "jsx": true
    }
 },
  "rules": {
    "no-console": 0,
    "func-names": 0,
    "vars-on-top": 0,
    "no-else-return": 0,
    "consistent-return": 0,
    "no-process-exit": 0,
    "no-undef": 0,
    "no-unused-vars": 0,
    "no-mixed-spaces-and-tabs": 0,
    "no-redeclare": 0,
    "no-constant-condition": 0

  },
  "globals": {
    "useResultsTable_template": false,
    "useResultsTableTemplate" : true,
    "imageBoxesTemplate": true,
    "casper": false
  },
  "env": {
    "node": true,
    "es6": true
  },
  "extends": "eslint:recommended"
}
